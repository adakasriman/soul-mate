{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2021",

    "outDir": "./dist",
    "rootDir": "./src",

    "baseUrl": "./src",

    "paths": {
      "@database/*": ["database/*"],
      "@modules/*": ["modules/*"],
      "@common/*": ["common/*"],
      "@config/*": ["config/*"],
      "@events/*": ["events/*"],
      "@jobs/*": ["jobs/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"]
    },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "sourceMap": true,
    "declaration": true,
    "removeComments": true,

    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
